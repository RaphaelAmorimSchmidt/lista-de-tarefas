<div class="ml-3">
  <% if user_signed_in? %>
    <%= link_to "New List", new_list_path %>
  <% end %>
</div>
<div class="d-flex mb-3">
  <% @lists.each do |list|%>
    <div class="card border-secondary m-3" style="max-width: 18rem;">
      <div class="card-header"><%= link_to list.name, list_path(list) %></div>
      <div class="card-body text-secondary">
        <h5 class="card-title"><%=list.user.email%></h5>
        <%list.tasks.each do |task|%>
        <p class="card-text"><%=task.name%>,<%=task.check%>, <%=task.user.email%></p>
        <% end %>

      </div>
    </div>
  <% end %>
</div>
